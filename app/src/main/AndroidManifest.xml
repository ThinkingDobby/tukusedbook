<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thinkingdobby.tukusedbook">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_tukusedbooklogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_tukusedbooklogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MessageListActivity"/>
        <activity android:name=".MessageActivity"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".InterestedActivity" />
        <activity android:name=".MyBookActivity" />
        <activity
            android:name=".MyProfileActivity"
            android:launchMode="singleTask" />
        <activity android:name=".BookDetailActivity" />
        <activity
            android:name=".BookAddActivity"
            android:launchMode="singleTask" />
        <activity android:name=".CreateProfileActivity" />
        <activity
            android:name=".LoadingActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustNothing" />
    </application>

</manifest>