<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="170dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/bookDetailDialog_tv_titleDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_regular"
            android:text="게시일"
            android:textColor="@color/colorDarkGray"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/bookDetailDialog_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="2022.04.19"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/bookDetailDialog_tv_titleDate"
            app:layout_constraintStart_toEndOf="@id/bookDetailDialog_tv_titleDate"
            app:layout_constraintTop_toTopOf="@id/bookDetailDialog_tv_titleDate" />

        <TextView
            android:id="@+id/bookDetailDialog_tv_titleISBN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/pretendard_regular"
            android:text="ISBN"
            android:textColor="@color/colorDarkGray"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bookDetailDialog_tv_titleDate" />

        <TextView
            android:id="@+id/bookDetailDialog_tv_isbn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_medium"
            android:text="123456789"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/bookDetailDialog_tv_titleISBN"
            app:layout_constraintStart_toStartOf="@id/bookDetailDialog_tv_date"
            app:layout_constraintTop_toTopOf="@id/bookDetailDialog_tv_titleISBN" />

        <TextView
            android:id="@+id/bookDetailDialog_tv_titlePage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/pretendard_regular"
            android:text="쪽 수"
            android:textColor="@color/colorDarkGray"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bookDetailDialog_tv_titleISBN" />

        <TextView
            android:id="@+id/bookDetailDialog_tv_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_medium"
            android:text="360 쪽"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/bookDetailDialog_tv_titlePage"
            app:layout_constraintStart_toStartOf="@id/bookDetailDialog_tv_date"
            app:layout_constraintTop_toTopOf="@id/bookDetailDialog_tv_titlePage" />

        <TextView
            android:id="@+id/bookDetailDialog_tv_titleSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/pretendard_regular"
            android:text="크기"
            android:textColor="@color/colorDarkGray"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bookDetailDialog_tv_titlePage"/>

        <TextView
            android:id="@+id/bookDetailDialog_tv_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_medium"
            android:text="300 x 300 (mm)"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/bookDetailDialog_tv_titleSize"
            app:layout_constraintStart_toStartOf="@id/bookDetailDialog_tv_date"
            app:layout_constraintTop_toTopOf="@id/bookDetailDialog_tv_titleSize" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>